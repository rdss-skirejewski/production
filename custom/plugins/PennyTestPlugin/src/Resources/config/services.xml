<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true" autoconfigure="true" public="true" />

        <service id="PennyTestPlugin\Controller\TestController" public="true">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        <service id="PennyTestPlugin\Controller\TestProductController" public="true">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        <service id="PennyTestPlugin\Controller\StoreFrontTestProductController" public="true">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        <service id="PennyTestPlugin\Extension\Content\Product\PennyProductExtension">
            <tag name="shopware.entity.extension"/>
        </service>
        <service id="ct.command.add_custom_field" class="PennyTestPlugin\Command\AddCustomFieldSetsCommand" >
            <argument type="service" id="custom_field_set.repository"/>
            <tag name="console.command"/>
        </service>
        <service class="PennyTestPlugin\Command\MoveVariantCommand" id="penny_test_plugin.command.move_variant_command">
            <argument type="service" id="product.repository"/>
            <tag name="console.command"/>
        </service>
        <service class="PennyTestPlugin\Command\GenerateProductsViaApiCommand" id="penny_test_plugin.command.generate_products_via_api_command">
            <argument type="service" id="Shopware\Core\Framework\Api\Sync\SyncService"/>
        </service>
    </services>
</container>
